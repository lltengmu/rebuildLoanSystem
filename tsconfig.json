{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true, // Bypass raising errors on `any` type
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/types/*.d.ts",
    "./types/*.d.ts"
  ] // 前端路径模式
}